<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MochaCalculatorActivity"
    android:orientation="vertical">


<LinearLayout
    android:id="@+id/TopLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b7b494"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/calcOut"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|right"
        android:text="0"
        android:textSize="32sp" />
</LinearLayout>


<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:orientation="vertical"
android:background="#DFD0C0"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="0.8"
    android:orientation="horizontal">

    <Button
        android:id="@+id/seven"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:text="7"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="0dp" />
    <Button
        android:id="@+id/eight"
        android:layout_width="0dip"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:text="8"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:layout_height="match_parent"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/nine"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:textColor="#675041"
        android:backgroundTint="#DFD0C0"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="9" />
    <Button
        android:id="@+id/Times"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="x" />

</LinearLayout>

<LinearLayout
    android:layout_height="0dip"
    android:layout_weight="0.8"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/four"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="4" />
    <Button
        android:id="@+id/five"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="5" />
    <Button
        android:id="@+id/six"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="6" />
    <Button
        android:id="@+id/div"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="/" />
</LinearLayout>

<LinearLayout
    android:layout_height="0dip"
    android:layout_weight="0.8"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/one"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:textSize="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="1" />
    <Button
        android:id="@+id/two"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:layout_weight="1"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="2" />
    <Button
        android:id="@+id/three"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:layout_weight="1"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="3" />
    <Button
        android:id="@+id/plus"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:textColor="#675041"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="+" />

</LinearLayout>
<LinearLayout
    android:layout_height="0dip"
    android:layout_weight="0.8"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/leftP"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="(" />
    <Button
        android:id="@+id/zero"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:layout_weight="1"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="0" />
    <Button
        android:id="@+id/rightP"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:layout_weight="1"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text=")"/>
    <Button
        android:id="@+id/minus"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:layout_weight="1"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="-"/>
</LinearLayout>
<LinearLayout
    android:layout_height="0dip"
    android:layout_weight="0.8"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/dot"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:layout_weight="1"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="." />
    <Button
        android:id="@+id/Delete"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:layout_weight="1"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="16dp"
        android:text="DEL" />
    <Button
        android:id="@+id/Clear"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:textColor="#675041"
        android:layout_weight="1"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="16dp"
        android:text="CLEAR"/>
    <Button
        android:id="@+id/Equal"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:backgroundTint="#DFD0C0"
        android:layout_weight="1"
        android:textColor="#675041"
        app:cornerRadius="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="24dp"
        android:text="="/>
</LinearLayout>
</LinearLayout>


    </LinearLayout>